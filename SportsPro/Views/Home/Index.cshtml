@{
    ViewData["Title"] = "Technicians";
    ViewBag.mode = "Home";
}

<h1>SportsPro Technical Support</h1>
<p>Sports management software for the sports enthusiast</p>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block  w-100" src="https://images.pexels.com/photos/46798/the-ball-stadion-football-the-pitch-46798.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block  w-100" src="https://images.pexels.com/photos/3662553/pexels-photo-3662553.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block  w-100" src="https://images.pexels.com/photos/533509/pexels-photo-533509.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://images.pexels.com/photos/12801/pexels-photo-12801.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block  w-100" src="https://images.pexels.com/photos/3133685/pexels-photo-3133685.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<h1>Admin</h1>
<div class="container">
    <div class="row">
        <div class="col-sm pl-0">
            <a asp-controller="Product" asp-action="List"
               class="list-group-item bg-warning ">Manage Products</a>
        </div>
        <div class="col-sm">
            <a asp-controller="Technician" asp-action="List"
               class="list-group-item bg-warning">Manage Technicians</a>
        </div>
        <div class="col-sm">
            <a asp-controller="Customer" asp-action="List"
               class="list-group-item bg-warning">Manage Customers</a>
        </div>
        <div class="col-sm">
            <a asp-controller="Incident" asp-action="List"
               class="list-group-item bg-warning">Manage Incidents</a>
        </div>
        <div class="col-sm">
            <a asp-controller="CustomerProduct" asp-action="GetCustomer"
               class="list-group-item bg-warning">Man. Registrations</a>
        </div>
    </div>
</div>

<h1>Technicians</h1>
<div class="list-group ">
    <a asp-controller="TechnicianIncident" asp-action="get"
       class="list-group-item bg-warning">Update Incident</a>
</div>